# Example explosion VFX effect - Enhanced syntax with arrow animations

[vfx]
loop = false
duration = 2.0

[emitters]
flash
debris

[flash]
rate = 0
burst = [5, 10]
duration = 0.1
angle = [0, 360]
spawn = [(-0.5, -0.5), (0.5, 0.5)]

[flash.particle]
duration = [.05, .1]
size = [0.5, 1.0] => 0.5
speed = [10.0, 15.0] => [1.0, 2.0]
color = yellow
opacity = 1.0 => 0
rotation = [0, 360]

[debris]
rate = 0
burst = [20, 30]
duration = 0.1
angle = [0, 360]

[debris.particle]
duration = [0.3, 0.8]
size = [0.05, 0.1] => 0.05 : quadratic
speed = [5.0, 10.0] => 0 : cubic
color = #FF000000 => #FF660000 : ease_out
gravity = (0, -9.8, 0)
drag = 0.2
rotation = [0, 360]

